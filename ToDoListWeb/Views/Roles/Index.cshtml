@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Roles List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new role
            </a>
        </div>
    </div>
</div>

<div>
    @if(Model.Any())
    {
        <table class="table table-striped table-bordered">
            <tr> 
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td width="20%">
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary mx-2 rounded-2" 
                                style="cursor:pointer" width="50%"><i class="bi bi-pencil-square"></i> Edit</a>
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')" 
                                        width="50%" class="btn btn-danger mx-2 rounded-2" ><i class="bi bi-trash"></i> Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>