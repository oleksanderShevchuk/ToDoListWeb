@model LoginViewModel

<h2>Sign in</h2>

<a asp-action="Login" asp-controller="Account">Login</a>

<form asp-controller="Account" asp-action="Login" asp-anti-forgery="true">
  <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter Email</label>
            <input type="text" asp-for="Email" />
             <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter Password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-outline-dark" />
        </div>
    </div>
</form>