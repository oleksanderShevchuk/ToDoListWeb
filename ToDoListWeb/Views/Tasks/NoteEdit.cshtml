@model Tasks

<form method="post" asp-action="NoteEdit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit note</h2>
            <hr />
        </div>
        <div class="mb-3">
            <input asp-for="NoteName" class="form-control" />
            <span asp-validation-for="NoteName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Tasks" asp-action="NoteIndex" asp-route-id="@Model.Id" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

