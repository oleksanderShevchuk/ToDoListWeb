@model Tasks
@{
    ViewData["Title"] = "NoteIndex";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Task note</h2>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-info">@Model.Name</h3>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td width="83%">
                @Model.NoteName
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-controller="Tasks" asp-action="NoteEdit" asp-route-id="@Model.Id" width="50%"
                    class="btn btn-primary mx-2 rounded-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Tasks" asp-action="NoteDelete" asp-route-id="@Model.Id" width="50%"
                    class="btn btn-danger mx-2 rounded-2"> <i class="bi bi-trash"></i> Delete</a>
                </div>
            </td>
        </tr>
    </tbody>
</table>
<div class="row pt-4">
    <a asp-controller="Tasks" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to List
    </a>
</div>
