@model Tasks
@{
    ViewData["Title"] = "Todo";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Todo</h2>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" border="1" style="width:100%">
    <tbody>
    <tr>
        <th width="15%">
            Title
        </th>
        <td width="85%">
            @Model.Title
        </td>
    </tr>
    <tr>
        <th >
            Description
        </th>
        <td>
            @Model.Description
        </td>
    </tr>
    <tr>
        <th>
            DueDate
        </th>
        <td>
            @Model.DueDate
        </td>
    </tr>
    <tr>
        <th>
            Category
        </th>
        <td>
            @Model.CategoryId
        </td>
    </tr>
    <tr>
        <th>
            Status
        </th>
        <td>
            @Model.StatusId
        </td>
    </tr>
    </tbody>
</table>
<div class="btn-group" role="group">
    <a asp-controller="Tasks" asp-action="Index" class="btn btn-secondary mx-2 rounded-2"> Back to List</a>
    <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@Model.Id" 
       class="btn btn-primary mx-2 rounded-2"> <i class="bi bi-pencil-square"></i> Edit</a>
    <a asp-controller="Tasks" asp-action="Delete" asp-route-id=" @Model.Id" 
       class="btn btn-danger mx-2 rounded-2"><i class="bi bi-trash"></i> Delete</a>
</div>