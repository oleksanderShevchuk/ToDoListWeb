@model IEnumerable<ApplicationUser>

<div class="container p-3">
     <div class="row pt-4">
         <div class="col-6">
         <h2 class="text-primary">User List</h2>
         </div>
     </div>
</div>

<div>
    @if(Model.Count() > 0)
    {
        <table class="table table-striped table-bordered">
            <tr> 
                <th>
                    Email
                </th>
                <th>
                    Name
                </th>
                <th>
                    Roles
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Role
                    </td>
                    <td>
                        
                    </td>
                </tr>
            }
        </table>
    }
</div>